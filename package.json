{
  "name": "@gud/json-store",
  "version": "0.0.2",
  "description": "A TypeScript-first JSON key-value store with Zod schema validation.",
  "license": "Apache-2.0",
  "author": "Ryan Goree (https://github.com/ryangoree)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryangoree/gud-json-store.git"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "test": "tsx --test src/*.test.ts",
    "test:watch": "tsx --test --watch src/*.test.ts",
    "format": "biome format --write",
    "lint": "biome lint --diagnostic-level error .",
    "lint:fix": "npm run lint --fix",
    "lint:fix:unsafe": "npm run lint:fix --unsafe",
    "typecheck": "tsc --noEmit",
    "release": "npm run build && changeset publish"
  },
  "peerDependencies": {
    "zod": "^3 || ^4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.1.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "zod": "^4.0.14"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
