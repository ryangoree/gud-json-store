{
  "name": "@gud/json-store",
  "version": "0.0.1",
  "description": "A TypeScript-first JSON key-value store with Zod schema validation.",
  "license": "Apache-2.0",
  "author": "Ryan Goree (https://github.com/ryangoree)",
  "repository": "https://github.com/ryangoree/gud-json-store",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "zod": "^3.0.0 || ^4.0.0"
  },
  "scripts": {
    "build": "tsup",
    "test": "tsx --test src/*.test.ts",
    "test:watch": "tsx --test --watch src/*.test.ts",
    "format": "biome format --write",
    "lint": "biome lint --diagnostic-level error .",
    "lint:fix": "npm run lint --fix",
    "lint:fix:unsafe": "npm run lint:fix --unsafe",
    "typecheck": "tsc --noEmit",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.1.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "zod": "^4.0.10"
  },
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
